import random
mazo = ["defuse", "bomba", "comodin", "favor", "shuffle", "STF"]

def rotaLista(x):
    x.append(x[0])
    return x[1:]

def checkIn(x,l): #revisa si x esta en l
    if x in l:
        return True
    else:
        return False

def checkBomba(l):
    if checkIn("bomba",l)==True:
        print ("perdiste")

def revuelveMazo(l):
    random.shuffle(l)
    return l
def seeTheFuture(l):
    return l[:3]

print(seeTheFuture(mazo))